<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="corp.katet.evernote" >

    <application
        android:name=".EvernoteApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainMenuActivity"
            android:label="@string/login" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.evernote.client.android.EvernoteOAuthActivity" />
        <activity android:name="com.evernote.client.android.login.EvernoteLoginActivity" />
        <activity
            android:name=".NoteDashboardActivity"
            android:label="@string/app_name" >
        </activity>
        <activity android:name=".UpdateTextNoteActivity" >
        </activity>
        <activity
            android:name=".CreateTextNoteActivity"
            android:label="@string/text_note" >
        </activity>
        <activity
            android:name=".NewNoteActivity"
            android:finishOnTaskLaunch="true"
            android:label="@string/new_note"
            android:theme="@android:style/Theme.Holo.DialogWhenLarge"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name=".CreateDrawNoteActivity"
            android:label="@string/title_activity_create_draw_note" >
        </activity>
    </application>

</manifest>
